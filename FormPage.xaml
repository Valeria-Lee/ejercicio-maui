<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioMaui.FormPage"
             Title="FormPage">
    <VerticalStackLayout>
        <Label 
            Text="Insertar nueva persona"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtNombre"
            Placeholder="Nombre"
            Completed="txtNombre_Completed"
            WidthRequest="200"
            HeightRequest="50"></Entry>
        <Entry
            x:Name="txtApellido"
            Placeholder="Apellido"
            Completed="txtApellido_Completed"
            WidthRequest="200"
            HeightRequest="50"></Entry>
        <Button
            x:Name="btnCrear"
            Text="Crear persona"
            HeightRequest="50"
            WidthRequest="150"
            Clicked="btnCrear_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>